# API Keys (at least one is required)
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=...

# Vertex AI Configuration (optional, for Google provider)
# Set USE_VERTEX_AUTH=true to use Application Default Credentials instead of API key
USE_VERTEX_AUTH=false
VERTEX_PROJECT=your-gcp-project-id
VERTEX_LOCATION=us-central1

# Provider Configuration
# PREFERRED_PROVIDER: openai (default), google, or anthropic
PREFERRED_PROVIDER=openai

# Model Configuration (optional, defaults will be set based on PREFERRED_PROVIDER)
# BIG_MODEL: Model to map "sonnet" requests to
BIG_MODEL=gpt-4.1
# SMALL_MODEL: Model to map "haiku" requests to
SMALL_MODEL=gpt-4.1-mini

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8082

# Logging
VERBOSE=false
